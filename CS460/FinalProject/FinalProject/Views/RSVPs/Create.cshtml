@model FinalProject.Models.RSVP

@{
    ViewBag.Title = "Create";
}

<div class="container-fluid pt-3">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>RSVP</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.EventName, "EventName", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("EventName", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EventName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PersonAttending, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("PersonAttending", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PersonAttending, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group d-flex m-0">
                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary mr-auto" })
                        <input type="submit" value="RSVP" class="btn btn-success ml-auto" />
                    </div>
                </div>
            }
        </div><!--/col-lg-8-->
    </div><!--/row-->
</div><!--/container-fluid-->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
