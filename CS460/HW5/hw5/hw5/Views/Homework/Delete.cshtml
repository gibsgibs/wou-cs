@model hw5.Models.Homework

<div class="h2 text-center my-3">
    Delete
</div>

<div class=container-fluid>
    <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header text-center">
                    @Html.DisplayFor(model => model.Title)
                </div><!--/card-header-->
                <div class="card-body d-flex justify-content-center">
                    <div class="container-fluid">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <dl>
                                    <dt>
                                        Class
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Department)@Html.DisplayFor(model => model.CourseNumber)
                                    </dd>
                                </dl>
                            </div><!--/col-->
                            <div class="col-md-4">
                                <dl>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.DueDate)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.DueDateAsString) at @Html.DisplayFor(model => model.DueTime)
                                    </dd>
                                </dl>
                            </div><!--/col-->
                            <div class="col-md-4">
                                <dl>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.ItemPriority)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ItemPriority)
                                    </dd>
                                </dl>
                            </div><!--/col-->
                        </div><!--/row-->
                        <div class="row text-center">
                            <div class="col">
                                <div class="h4">
                                    Are you sure you want to delete this?
                                </div>
                            </div><!--/col-->
                        </div><!--/row-->
                        <div class="row d-flex justify-content-center">
                            <div class="col-xs-3 text-center">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions">
                                        <input id="button" type="submit" value="Yes" class="btn btn-outline-danger" />
                                    </div>
                                }
                            </div>
                            <div class="col-xs-3 text-center">
                                @Html.ActionLink("No", "Index", new { id = Model.ID }, new
                                {
                                    @class = "btn btn-outline-success",
                                    id = "button"
                                })
                            </div>
                        </div><!--/row-->
                    </div><!--/container-fluid-->
                </div><!--/card-body-->

            </div>
            </div>
        </div>
    </div>
