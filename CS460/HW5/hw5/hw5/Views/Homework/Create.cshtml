@using hw5.Models
@model hw5.Models.Homework

<div class="h2 text-center my-3">
    Create
</div>

<div class=container-fluid>
    <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header text-center">
                    Create a new Homework Assignment
                </div><!--/card-header-->
                <div class="card-body d-flex justify-content-center">
                    @using (Html.BeginForm("Create", "Homework", FormMethod.Post, new { @class = "container-fluid" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        @Html.LabelFor(model => model.Title, htmlAttributes: new
                                        {
                                            id = "inputLabel"
                                        })
                                    </div><!--/input-group-text-->
                                </div><!--/input-group-prepend-->
                                @Html.EditorFor(model => model.Title, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control"
                                    }
                                })
                            </div><!--/input-group-->
                        </div><!--/form-group-->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        @Html.LabelFor(model => model.Department, htmlAttributes: new
                                        {
                                            id = "inputLabel"
                                        })
                                    </div><!--/input-group-text-->
                                </div><!--/input-group-prepend-->
                                @Html.EditorFor(model => model.Department, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control",
                                        placeholder = "CS"
                                    }
                                })
                            </div><!--/input-group-->
                        </div><!--/form-group-->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        @Html.LabelFor(model => model.CourseNumber, htmlAttributes: new
                                        {
                                            id = "inputLabel"
                                        })
                                    </div><!--/input-group-text-->
                                </div><!--/input-group-prepend-->
                                @Html.EditorFor(model => model.CourseNumber, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control",
                                        min = "0",
                                        placeholder = "101"
                                    }
                                })
                            </div><!--/input-group-->
                        </div><!--/form-group-->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        @Html.LabelFor(model => model.DueDate, htmlAttributes: new
                                        {
                                            id = "inputLabel"
                                        })
                                    </div><!--/input-group-text-->
                                </div><!--/input-group-prepend-->
                                @Html.EditorFor(model => model.DueDate, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control",
                                        placeholder = "yyyy-mm-dd",
                                        pattern = "^[1-9][0-9]{3}-[0-9]{2}-[0-9]{2}$",
                                        oninvalid="this.setCustomValidity('Please use requested format: yyyy-mm-dd')", 
                                        oninput="this.setCustomValidity('')" 
                                    }
                                })
                            </div><!--/input-group-->
                        </div><!--/form-group-->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        @Html.LabelFor(model => model.DueTime, htmlAttributes: new
                                        {
                                            id = "inputLabel"
                                        })
                                    </div><!--/input-group-text-->
                                </div><!--/input-group-prepend-->
                                @Html.EditorFor(model => model.DueTime, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control",
                                        placeholder = "hh:mm:ss",
                                        pattern = "^([0-1][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]$",
                                        oninvalid="this.setCustomValidity('Please use requested format: hh:mm:ss')", 
                                        oninput="this.setCustomValidity('')" 
                                    }
                                })
                            </div><!--/input-group-->
                        </div><!--/form-group-->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        @Html.LabelFor(model => model.ItemPriority, htmlAttributes: new
                                        {
                                            id = "inputLabel"
                                        })
                                    </div><!--/input-group-text-->
                                </div><!--/input-group-prepend-->
                                @Html.DropDownListFor(model => model.ItemPriority, new SelectList(Enum.GetValues(typeof(Priorities))), "Select Priority", new
                                {
                                    @class = "form-control"
                                })
                            </div><!--/input-group-->
                        </div><!--/form-group-->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        @Html.LabelFor(model => model.Notes, htmlAttributes: new
                                        {
                                            id = "inputLabel"
                                        })
                                    </div><!--/input-group-text-->
                                </div><!--/input-group-prepend-->
                                @Html.TextAreaFor(model => model.Notes, new
                                {
                                    @class = "form-control",
                                    rows = 1
                                })
                            </div><!--/input-group-->
                        </div><!--/form-group-->
                        <div class="row d-flex justify-content-center">
                            <div class="col-xs-3 text-center">
                                <div class="form-group">
                                    <button id="button" type="submit" class="btn btn-outline-primary">
                                        Create
                                    </button>
                                </div><!--/form-group-->
                            </div>
                        </div>
                    }
                </div><!--/card-body-->
            </div><!--/card-->
        </div><!--/col-->
    </div><!--/row-->
</div><!--/container-fluid-->