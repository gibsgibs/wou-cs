@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron jumbotron-fluid text-center shadow">
    <div class="container">
        <h1 class="jumbo-header d-flex justify-content-center">
            TTT
        </h1>
        <p class="jumbo-text lead d-flex justify-content-center">
            The Track Tracker
        </p>
    </div><!--/container-->
</div><!--/jumbotron-->

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-5 p-3">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">
                        Add new items!
                    </h5>
                    <p class="card-text">
                        Use these three links to add new Athletes, Meets and Results to the system.
                    </p>
                    <div class="row d-flex justify-content-center">
                        @Html.ActionLink("Add Athlete", "CreateAthlete", "Home", null, new
                        {
                            @class = "btn btn-primary m-1",
                            id = "button"
                        })
                        @Html.ActionLink("Add Meet", "CreateMeet", "Home", null, new
                        {
                            @class = "btn btn-primary m-1",
                            id = "button"
                        })
                        @Html.ActionLink("Add Result", "CreateResult", "Home", null, new
                        {
                            @class = "btn btn-primary m-1",
                            id = "button"
                        })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5 p-3">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">
                        Check out some statistics!
                    </h5>
                    <p class="card-text">
                        Use these links to see how athletes are doing in both table and graph from.
                    </p>
                    <div class="row d-flex justify-content-center">
                        @Html.ActionLink("View Table", "Index", "Athletes", null, new
                        {
                            @class = "btn btn-primary m-1",
                            id = "button"
                        })
                        @Html.ActionLink("View Graph", "Graph", "Athletes", null, new
                        {
                            @class = "btn btn-primary m-1",
                            id = "button"
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>