@model hw8.Models.Result

@{
    ViewBag.Title = "Add Result";
}

<div class="container-fluid pt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
            @if (ViewBag.ResultError == true)
            {
                <h3 class="text-danger text-center py-3">
                    That athlete already has a time for that event at that meet.
                </h3>
            }
            else if (ViewBag.GenderError == true)
            {
                <h3 class="text-danger text-center py-3">
                    An athlete cannot compete outside their gender.
                </h3>
            }
            else if (ViewBag.Error == false)
            {       
                <h3 class="text-success text-center py-3">
                    Your entry was added to the system!
                </h3>
            }
            <div class="card shadow">
                <div class="card-header text-center text-light bg-dark py-2">
                    <h5 class="m-0">
                        Add a New Result
                    </h5>
                </div>
                <div class="card-body d-flex justify-content-center">
                    @using (Html.BeginForm("CreateResult", "Home", FormMethod.Post, new { @class = "container-fluid p-0" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text text-light bg-dark">
                                                @Html.LabelFor(model => model.AthleteID, htmlAttributes: new
                                                {
                                                    id = "inputLabel"
                                                })
                                            </div>
                                        </div>
                                        @Html.DropDownList("AthleteID", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text text-light bg-dark">
                                                @Html.LabelFor(model => model.EventID, htmlAttributes: new
                                                {
                                                    id = "inputLabel"
                                                })
                                            </div>
                                        </div>
                                        @Html.DropDownList("EventID", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text text-light bg-dark">
                                                @Html.LabelFor(model => model.Meet, htmlAttributes: new
                                                {
                                                    id = "inputLabel"
                                                })
                                            </div>
                                        </div>
                                        @Html.DropDownList("MeetID", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text text-light bg-dark">
                                                @Html.LabelFor(model => model.Time, htmlAttributes: new
                                                {
                                                    id = "inputLabel"
                                                })
                                            </div>
                                        </div>
                                        @Html.EditorFor(model => model.Time, new
                                        {
                                            htmlAttributes = new
                                            {
                                                @class = "form-control",
                                                min = 0
                                            }
                                        })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-0 d-flex">
                            @Html.ActionLink("Home", "Index", null, new
                            {
                                @class = "btn btn-primary mr-auto"
                            })
                            <input type="submit" value="Add" class="btn btn-success ml-auto" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}