@model hw8.Models.Athlete

@{
    ViewBag.Title = "Details";
}

<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
            <h3 class="text-primary text-center mt-5">
                Results for @Html.DisplayFor(model => model.Person.Name)
            </h3>
            <div class="table-responsive">
                <table class="table table-hover shadow">
                    <thead class="bg-dark text-light font-weight-bold">
                        <tr>
                            <th>
                                @Html.LabelFor(model => model.Results.First().Meet.Date, new { @class = "m-0" })
                            </th>
                            <th>
                                @Html.LabelFor(model => model.Results.First().Event.Name, new { @class = "m-0" })
                            </th>
                            <th>
                                @Html.LabelFor(model => model.Results.First().Meet.Location, new { @class = "m-0" })
                            </th>
                            <th>
                                @Html.LabelFor(model => model.Results.First().Time, new { @class = "m-0" })
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Results.OrderBy(r => r.Event.Name).ThenBy(r => r.Meet.Date))
                        {
                            <tr>
                                <td>
                                    @item.Meet.Date.ToShortDateString()
                                </td>
                                <td>
                                    @item.Event.Name
                                </td>
                                <td>
                                    @item.Meet.Location
                                </td>
                                <td>
                                    @item.Time
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex">
                @Html.ActionLink("Back", "Index", "Athletes", null, new
                {
                    @class = "btn btn-primary mr-auto"
                })
                @Html.ActionLink("Home", "Index", "Home", null, new
                {
                    @class = "btn btn-primary ml-auto"
                })
            </div>
        </div>
    </div>
</div>
